<!--ジャンル検索部分テンプレート-->
<table class="table border border-info mt-5">
  <tbody>
    <tr>
      <td>
        <h6><strong><i class="fa-solid fa-magnifying-glass fa-flip"></i>ジャンル検索</strong></h6>
      </td>
    </tr>
    <%= form_with url: genre_search_path, method: :get do |f| %>
      <% genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, genre_search_path(genre_id: genre.id) %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>