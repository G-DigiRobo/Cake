<div class='container'>
  <div class='row'>
    <div class='col-lg-7 col-md-9 mx-auto align-items-center'>
      <h2 class="text-center mt-4">ショッピングカート</h2>
      <div class="text-right"><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に空にしますか？", class: "btn btn-sm btn-danger" %></div>
      <table class = "table">
        <thead>
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価（税込)</th>
            <th scope="col">数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                  <%= image_tag cart_item.item.get_item_image(100,100) %>
                  <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.tax_included_price%></td>
              <td><%= form_with model:cart_item, url:cart_item_path(cart_item.id) , local:true do |f| %>
                    <div class="d-flex align-items-center">
                    <%= f.select :amount, *[1..10] %>
                    <%= f.submit "変更", class: 'btn btn-primary' %>
                  <% end %>
              </td>
              <td><%= cart_item.subtotal%></td>
              <td><%= link_to 'Destroy', cart_item_path(cart_item.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class= "text-right border-bottom">合計金額 <%= @sum.to_s(:delimited) %></div>
      <%= link_to "買い物を続ける", items_path, class: 'btn btn-primary' %>
      <%= link_to "情報入力に進む", new_order_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>


