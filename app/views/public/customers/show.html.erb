<!--会員詳細ページ(塚本)-->
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-md-9 mx-auto align-items-center">
        <%= flash[:notice] %>
        <h2 class="text-center mt-4">マイページ</h2>
        <div class="row my-3">
          <div class="col-3">
           <strong>登録情報</strong>
          </div>
          <div class="col-8">
             <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-dark rounded-pill text-lig" %>
          </div>
        </div>
            <table class="table table-hover">
              <tr>
                <td>氏名</td>
                <td><%= @customer.last_name %><%= @customer.first_name %></td>
              </tr>
              <tr>
                <td>カナ</td>
                <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
              </tr>
              <tr>
                <td>郵便番号</td>
                <td><%= @customer.postcode %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td><%= @customer.telephone_number %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
            </table>
            <div class="row mt-4">
              <div class="col-3">
                <strong>配送先</strong>
              </div>
              <div class="col-8">
                <%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary rounded-pill text-lig" %>
              </div>
            </div>
            <div class="row my-3">
              <div class="col-3">
                <strong>注文履歴</strong>
              </div>
              <div class="col-8">
                <%= link_to "一覧を見る", orders_path, class: "btn btn-primary rounded-pill text-lig" %>
              </div>
            </div>
      </div>
    </div>
  </div>