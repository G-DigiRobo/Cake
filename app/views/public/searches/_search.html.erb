<div class="search_form">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <div class="form-group d-flex">
      <%= f.text_field :word, placeholder: "Search for Items", class: "form-control mr-2" %>
      <%= f.hidden_field :range, value: 'Item' %>
      <%= f.hidden_field :search, value: 'partial_match' %>
      <%= f.submit "検索", class: "btn btn-primary rounded-pill" %>
    </div>
  <% end %>
</div>