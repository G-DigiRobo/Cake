<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2><i class="fa-solid fa-ghost"></i>ログイン<i class="fa-solid fa-apple-whole"></i></h2>
      <h5>会員の方はこちらからログイン</h5>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>

        <div class="form-group">
          <%= f.label :email,"メールアドレス" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :password,"パスワード" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-primary rounded-pill" %>
        </div>
      <% end %>

      <h5>会員登録がお済みでない方</h5>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>