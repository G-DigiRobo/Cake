<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-md-12">
      <h2><i class="fa-solid fa-cookie"></i>新規会員登録<i class="fa-solid fa-cookie-bite"></i></h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <p>名前</p>
          <%= f.label :last_name,"(姓)" %>
          <%= f.text_field :last_name, class: "form-control", autofocus: true %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <p>&nbsp;</p>
          <%= f.label :first_name,"(名)" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <p>フリガナ</p>
          <%= f.label :last_name_kana,"(セイ)" %>
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <p>&nbsp;</p>
          <%= f.label :first_name_kana,"(メイ)" %>
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :email,"メールアドレス" %>
          <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :postcode,"郵便番号(ハイフンなし)" %>
          <%= f.text_field :postcode, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :address,"住所" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :telephone_number,"電話番号(ハイフンなし)" %>
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :password,"パスワード(6文字以上)" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :password_confirmation,"パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group actions">
          <%= f.submit "新規登録", class: "btn btn-primary rounded-pill" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row mt-4">
    <div class="col-md-12">
      <h2>既に登録済みの方</h2>
    </div>
  </div>
  <%= render "public/shared/links" %>
</div>