<div class="container">
  <h2>注文履歴詳細</h2>
  <table class = "table">
    <thead>
      <tr>
        <th>注文番号</th>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at %></td>
          <td>〒<%= order.postcode %><br><%= order.address %><br><%= order.name %></td>
          <td>
            <% order.order_details.each do |item| %>
              <%= item.item.name %>
            <% end %>
          </td>
          <td><%= number_with_delimiter(order.billing_amount) %>円</td>
          <td><%= order.order_status_i18n %></td>
          <td>
            <%= link_to "表示する", order_path(order), class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>