<div class="container">
  <h2>注文情報入力</h2>
  <h4>支払方法</h4>
  <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>

    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>

    <h4>お届け先</h4>
    <%= f.radio_button :select_address, "own_address" %>
    <%= f.label :select_address_own_address, "ご自身の住所" %><br>
    〒<%= current_customer.postcode %><%= current_customer.address %><br>
    <%= "#{current_customer.last_name} #{current_customer.first_name}" %><br>

    <%= f.radio_button :select_address, "registered_address" %>
    <%= f.label :select_address_registered_address, "登録済住所から選択" %>
    <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>

    <%= f.radio_button :select_address, "new_address" %>
    <%= f.label :select_address_new_address, "新しいお届け先" %><br>
    <table>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>

    <%= f.submit "確認画面に進む", class: 'btn btn-primary' %>
  <% end %>
</div>