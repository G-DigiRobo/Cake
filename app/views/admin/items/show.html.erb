<%# item new 町井 %>
<div class='container'>
  <div class='row'>
    <div class='col-lg-7 col-md-9 mx-auto align-items-center'>
      <h2 class="text-center mt-4">商品詳細</h2>
      <div class="row">
        <div class='col-md-6'>
          <%= image_tag @item.get_item_image(300, 300) %>
        </div>
        <div class='col-md-6'>
          <table style="height: 100%;">
            <tbody>
              <tr>
                <th>商品名</th>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <th>商品説明</th>
                <td><%= @item.detail %></td>
              </tr>
              <tr>
                <th>ジャンル</th>
                <td><%= @item.genre.name %></td>
              </tr>
              <tr>
                <th>税込価格(税抜価格)</th>
                <td>
                  <%= number_to_currency(@item.tax_included_price, unit: '¥', precision: 0, delimiter: ',') %>(<%= number_to_currency(@item.price, unit: '¥', precision: 0, delimiter: ',') %>)
                </td>
              </tr>
              <tr>
                <th>販売ステータス</th>
                <td><%= @item.is_sales_status ? "販売中" : "販売停止中" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row justify-content-end">
        <%= link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-success rounded-pill text-light" %>
      </div>
    </div>
  </div>
</div>