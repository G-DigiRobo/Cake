<%# item new 町井 %>
<div class='container'>
  <div class='row'>
    <div class='col-lg-7 col-md-9 mx-auto align-items-center'>
      <h2 class="text-center mt-4">商品詳細</h2>
        <div class="form-group row">
          <%= label :image, "商品画像" ,class:'col-12'%><br>
          <%= image_tag @item.get_profile_image(300, 300) %>
        </div>
        <div class="form-group row">
          <%= label :title, "商品名" , class: 'col-12'%>
            <%= @item.name %>
        </div>
        <div class="form-group row">
          <%= label :opinion, "商品説明" %>
          <%= @item.detail %>
        </div>
        <div class="form-group row">
          <%= label :name, "ジャンル" %>
          <%= @item.genre_id %>
        </div>
        <div class="form-group row ">
          <%= label :title, "税抜価格" %>
          <%= @item.price %>円
        </div>
        <div class="form-group row ">
          <%= label :is_sales_status, "販売ステータス" %>
          <%= @item.is_sales_status %>
        </div>
        <div class="form-group row ">
          <%= link_to "編集する", edit_admin_item_path(@item.id),class:"btn btn-success rounded-pill text-light text-center" %>
        </div>
      </div>
    </div>
  </div>