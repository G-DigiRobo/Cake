<%= form_with model:item do |f| %>
  <div><%= image_tag f.item.get_profile_image, size:'50x50' %></div>選択されていません
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :name, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :detail, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :price, class: 'form-control book_title' %>円
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success text-center' %>
  </div>
<% end %>
