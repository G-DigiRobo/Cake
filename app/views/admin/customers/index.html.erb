<!--管理者側・顧客一覧(塚本)-->
<div class="container">
  <div class="row">
    <div class="col-lg-7 col-md-9 mx-auto alingn-item-center">
      <h2 class="text-center my-4"><i class="fa-solid fa-users fa-beat"></i> 会員一覧 <i class="fa-solid fa-paperclip fa-beat"></i></h2>
      <table class="table table-hover table-inverse">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        <tb>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active ? "有効" : '<span class="text-muted">退会</span>'.html_safe %></td>
        </tr>
        <% end %>
        </tb>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
