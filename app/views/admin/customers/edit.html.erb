<!--管理者側・顧客編集ページ(塚本)-->
<div class="container">
  <div class="row">
    <div class="col-lg-7 col-md-9 mx-auto align-items-center">
      <h2 class="text-center my-4"><i class="fa-solid fa-seedling fa-bounce"></i> <%= @customer.last_name + @customer.first_name %>の会員情報編集 <i class="fa-solid fa-user-pen fa-bounce"></i></h2>
      <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
      <table class="table">
        <tr class="form-group">
          <td>氏名</td>
          <td>
            <%= f.text_field :last_name %><%= f.text_field :first_name, class: "ml-3" %>
          </td>
        </tr>
        <tr class="form-group">
          <td>フリガナ</td>
          <td>
            <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana, class: "ml-3" %>
          </td>
        </tr>
        <tr class="form-group">
          <td>郵便番号</td>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr class="form-group">
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr class="form-group">
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr class="form-group">
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
              <%= f.radio_button :is_active, true, checked: true %> 有効
              <%= f.radio_button :is_active, false %> 退会
          </td>
        </tr>
      </table>
      <div class="row text-center">
        <div class="col-8"><%= f.submit "変更を保存", class: "btn btn-dark rounded-pill text-lig ml-5" %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>


