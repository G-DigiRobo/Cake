<div class="container">
  <div class="row">
    <div class="col-lg-7 col-md-9 mx-auto alingn-item-center">
      <h3 class="text-left mt-3"><%= @customer の会員詳細 %></h3>
      <table class="table table-hover table-inverse">
        <th>
          <tr>
            <th></th>
            <th></th>
          </tr>
        </th>
        <tb>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
