<div class="container">
  <div class="row mx-auto mt-5 text-center">
    <div class="col-12">
      <div class="row align-items-baseline">
        <h2>注文履歴一覧</h2>
      </div>
      <table class='table'>
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M:%S') %></td>
            <td><%= order.name %></td>
            <td></td>
            <td>
              <%= order.order_status_i18n %>
              <%= link_to "キャンセル", admin_order_path(order), method: :delete, data: { confirm: "本当にキャンセルしますか？" }, class: "btn btn-sm btn-danger"%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>