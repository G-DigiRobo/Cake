<%# ジャンル edit まちい %>
<div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>商品編集</h1>
<%= form_with model: @genre, url: admin_genre_path do |f| %>
 <table class="table" style="border:none;">
  <thead style="border:none;">
    <tr>
      <th scope="col" style="border:none;">ジャンル名</th>
      <th scope="col" style="border:none;"><%= f.text_field :name %></th>
      <th scope="col" style="border:none;"><%= f.submit "変更を保存", class:"btn btn-primary rounded-pill text-light" %></th>
    </tr>
  </thead>
</table>
<% end %>
      </div>
    </div>
</div>