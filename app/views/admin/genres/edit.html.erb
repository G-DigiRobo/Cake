<%# ジャンル edit まちい %>
<div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>商品編集</h1>
<%= form_with model: @genre, url: admin_genre_path do |f| %>
 <table class="table" style="border:none;">
  <thead style="border:none;">
    <tr>
      <th scope="col" style="border:none;">ジャンル名</th>
      <th scope="col" style="border:none;"><%= f.text_field :name %></th>
      <th scope="col" style="border:none;"><%= f.submit "変更を保存", class:"btn btn-primary rounded-pill text-light" %></th>
    </tr>
  </thead>
</table>
<% end %>
      </div>
    </div>
</div>

<div class='container mx-auto my-5'>
  <div class='row'>
    <div class='col-6 align-items-center'>
<h3>ジャンル一覧・追加</h3>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
 <table class="table" style="border:none;">
  <thead style="border:none;">
    <tr>
      <th style="border:none;">ジャンル名</th>
      <th style="border:none;"><%= f.text_field :name %></th>
      <th style="border:none;"><%= f.submit "新規登録", class:"btn btn-primary rounded-pill text-light" %></th>
    </tr>
  </thead>
</table>
<% end %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to edit_admin_genre_path(genre.id),class:"btn btn-primary rounded-pill text-light" do %>
           編集する
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>