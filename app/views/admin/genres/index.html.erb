<%#ジャンル index まちい%>

<div class='container'>
  <div class='row'>
    <div class='col-lg-7 col-md-9 mx-auto align-items-center'>
      <%= flash[:notice] %>
      <% if @genre.errors.any? %>
      <%= @genre.errors.count %>erros
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <h3 class='text-center mt-4'><i class="fa-solid fa-ribbon fa-flip"></i> ジャンル一覧・追加 <i class="fa-solid fa-ribbon fa-flip"></i></h3>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class="table" style="border:none;">
          <thead style="border:none;">
            <tr>
              <th style="border:none;">ジャンル名</th>
              <th style="border:none;"><%= f.text_field :name %></th>
              <th style="border:none;"><%= f.submit "新規登録", class:"btn btn-primary rounded-pill text-light" %></th>
            </tr>
          </thead>
        </table>
      <% end %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to edit_admin_genre_path(genre.id), class:"btn btn-warning rounded-pill text-light" do %>
                  編集する
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>