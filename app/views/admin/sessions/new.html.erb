<div class="container">
  <div class="row">
    <div class="col-lg-7 col-md-9 mx-auto align-items-center">
      <h2 class="text-center mt-4"><i class="fa-brands fa-pagelines fa-beat"></i> 管理者ログイン <i class="fa-brands fa-pagelines fa-beat"></i></h2>
      <div class="col d-flex justify-content-center">
      <%= form_with model: @admin, url: new_admin_session_path do |f| %>
        <table>
          <tbody>
            <tr>
              <th><%= f.label :メールアドレス, class:'mt-4 mr-5' %></th>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <th><%= f.label :パスワード, class:'mt-4' %></th>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
          </tbody>
        </table>
        <div class="col d-flex justify-content-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <div class="col d-flex justify-content-center">
          <%= f.submit "ログイン", class: "btn btn-primary rounded-pill text-lig mt-3" %>
        </div>
       <% end %>
       <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>
