<!--管理者側・注文詳細画面(塚本)-->
  <div class="container">
    <div class="row">
      <div class="col-lg-7 col-md-9 mx-auto align-items-center">
        <h2 class="text-center my-4">注文履歴詳細</h2>
          <table class="table">
            <% @order.each do |order| %>
              <tr>
                <td><strong>購入者</strong></td>
                <td><%= @order.customer.last_name + @order.customer.first_name %></td>
              </tr>
              <tr>
                <td><strong>注文日</strong></td>
                <td><%= @order.created_at %></td>
              </tr>
              <tr>
                <td><strong>配送先</strong></td>
                <td><%= @order.postcode + @order.address %></td>
              </tr>
              <tr>
                <td><strong>支払方法</strong></td>
                <td><%= @order.payment_method %></td>
              </tr>
              <tr>
                <td><strong>注文ステータス</strong></td>
                <td>
                <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
                  <%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>
                  <%= f.submit "更新" , class: "btn btn-outline-success" %>
                <% end %>
                </td>
              </tr>
            <% end %>
          </table>
          <table class="table table-hover table-inverse">
            <tr>
              <th>商品名</th>
              <th>単価(税込価格)</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
            <tb>
            <tr>
              <td><%= </td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
            </tb>
          </table>
      </div>
    </div>
  </div>